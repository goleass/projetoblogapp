{{#each postagens}}
<div class="card">
    <div class="card-header">{{titulo}}</div>
    <div class="card-body">
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success" >Leia mais</button></a>
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data da publicação: {{data}}</small>
    </div>
</div>
{{else}}
    <h5>Nenhuma postagem</h5>
{{/each}}