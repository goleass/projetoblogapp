<h2>Lista de posts</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-header">{{titulo}}</div>
    <div class="card-body">
        <p>Conteudo: {{conteudo}}</p>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>{{data}}</small>
        <div>
            <a style="float: right" href="/admin/postagens/deletar/{{_id}}"><button  class="btn btn-danger mt-3" style="">deletar</button></a>
            <a style="float: right;  margin-right: 10px;" href="/admin/postagens/edit/{{_id}}"><button  class="btn btn-success mt-3" style="">editar</button></a>
        </div>
    </div>
</div>
{{else}}
<h4 class="mt-3">Nenhuma postagem resgistrada.</h4>
{{/each}}