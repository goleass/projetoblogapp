{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card col-md-6 " style="margin: 0 auto;">
    
    <div class="card-body">
        <h3>Editar postagem</h3>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" name="id" value="{{postagem._id}}">
            <label for="titulo">Titulo:</label>
            <input type="text" id="titulo" value="{{postagem.titulo}}" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" value="{{postagem.slug}}" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" value="{{postagem.descricao}}" name="descricao" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" class="form-control" required>{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">salvar</button>
        </form>
    </div>
</div>