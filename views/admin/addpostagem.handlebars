{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<div class="card col-md-6 " style="margin: 0 auto;">
    
    <div class="card-body"></div>
        <h3>Adicionar postagens</h3>
        <form action="/admin/postagens/nova" method="POST">
            <label for="titulo">Titulo:</label>
            <input type="text" id="titulo" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="conteudo" class="form-control" required></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" id="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-3">adicionar</button>
            <a href="/admin/postagens"><button class="btn btn-secondary mt-3">cancelar</button></a>
        </form>
    </div>
</div>