<div style="width: 400px; margin: 100px auto; margin-top: 20px;" class="col-md-5 col-12">
{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
    <h3>Editar Categoria:</h3>
    <div class="card">
        <div class="card-body">
            <form action="/admin/categorias/edit" method="POST">
                <label for="nome">Nome: </label>
                <input type="text" id="nome" value="{{categoria.nome}}" name="nome" placeholder="Nome da categoria" class="form-control">
                <input type="hidden" name="id" value="{{categoria._id}}">
                <label for="slug">Slug: </label>
                <input type="text" value="{{categoria.slug}}" id="slug" name="slug" placeholder="Slug da categoria" class="form-control">
                <button style="float: right" class="btn btn-success mt-2">salvar</button>
            </form>
        </div>
    </div>
</div>